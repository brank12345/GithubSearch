<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="theme">@style/AppTheme.EditText</item>
        <item name="errorTextAppearance">@style/AppTheme.EditText.Error</item>
        <item name="hintTextAppearance">@style/AppTheme.EditText.Hint</item>
    </style>

    <style name="AppTheme.EditText" parent="Theme.GitHubSearch">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="AppTheme.EditText.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AppTheme.EditText.Error" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>